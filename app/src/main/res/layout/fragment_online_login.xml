<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/spacing_4"
    tools:context=".views.auth.OnlineLoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_56"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/spacing_8"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_8"
        android:background="@drawable/corner_background_three"
        android:gravity="center"
        android:text="online play - login"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline" />


    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_8"
            android:layout_marginEnd="@dimen/spacing_8"
            android:hint="username"
            android:inputType="text"
            android:padding="@dimen/spacing_8"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_8"
            android:layout_marginEnd="@dimen/spacing_8"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="@dimen/spacing_8"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_play"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent"
        android:layout_marginTop="@dimen/spacing_64"
        android:text="READY? CLICK TO PLAY"
        android:textColor="@color/colorAccentLight"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/spacing_8"
        android:layout_marginEnd="@dimen/spacing_8"
        android:layout_marginBottom="@dimen/spacing_4"
        android:background="@drawable/corner_background_two"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/spacing_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="no account yet? no problem..."
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_sign_up"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_weight="1"
                android:text="sign up"
                android:textAllCaps="false"
                android:textColor="@color/colorAccentLight"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:layout_marginTop="@dimen/spacing_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="having troubles? no problem... "
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_help"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_weight="1"
                android:text="help"
                android:textAllCaps="false"
                android:textColor="@color/colorAccentLight"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
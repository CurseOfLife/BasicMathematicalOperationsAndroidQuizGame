<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"
        >
        <layer-list>
            <item android:left="2dp" android:right="2dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/silver" />
                    <corners android:radius="49dp" />
                </shape>
            </item>

            <item android:bottom="3dp" android:left="2dp">
                <shape>
                    <gradient android:angle="45" android:endColor="@color/colorPrimary"  android:centerColor="@color/colorPrimaryLight" android:startColor="@color/colorPrimary" android:type="linear" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="50dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:left="2dp" android:right="2dp" android:top="5dp">

                <shape>
                    <solid android:color="@color/silver" />
                    <corners android:radius="49dp" />
                </shape>
            </item>

            <item android:bottom="3dp" android:left="2dp">
                <shape>
                    <gradient android:angle="45" android:endColor="@color/colorAccent" android:centerColor="@color/colorAccentLight" android:startColor="@color/colorAccent" android:type="linear" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="50dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>